<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://documentListView.title"
      focusComponent="documentsDataGrid">
    <data>
        <collection id="documentsDc"
                    class="com.company.jmixpm2_7_1.entity.Document">
            <fetchPlan extends="_base"/>
            <loader id="documentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Document e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="documentsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="refreshButton" action="documentsDataGrid.refreshAction"/>
                <button id="readButton" action="documentsDataGrid.readAction"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="documentsDl"/>
            </endSlot>
        </hbox>
        <dataGrid id="documentsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="documentsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="refreshAction" type="list_refresh"/>
                <action id="readAction" type="list_read"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="file"/>
                <column property="notes"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
